{
  "name": "atom-html",
  "version": "2.0.0",
  "author": "Red Pixel Themes",
  "private": true,
  "scripts": {
    "css": "postcss assets/styles/main.css -o assets/styles/main.min.css --verbose",
    "server-reload": "browser-sync start --config './browser-sync-config.js'",
    "develop": "concurrently 'npm:css -- --watch' 'npm:server-reload'",
    "build": "npm run css -- --env 'production' --output public",
    "format": "npx prettier ./**/*.html"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%"
  ],
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@popperjs/core": "^2.11.8",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "bootstrap": "^5.3.3",
    "browser-sync": "^2.27.7",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.17",
    "postcss-cli": "^9.1.0",
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23"
  }
}
